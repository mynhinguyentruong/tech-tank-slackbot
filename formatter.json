{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": [
      "./node_modules",
      ".dockerignore",
      ".gitignore",
      ".DS_Store",
      ".env*.local",
      ".env",
      "./dist",
      "**/*.md",
      "**/*.yml",
      "LICENSE",
      "**/*.json"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingComma": "es5",
      "quoteStyle": "double",
      "arrowParentheses": "always",
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 80
    }
  }
}
