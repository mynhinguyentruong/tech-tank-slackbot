{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "formatter": {
    "indentSize": 2,
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingComma": "es5",
      "quoteStyle": "double",
      "arrowParentheses": "always",
      "indentSize": 2,
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 80
    }
  }
}
